{
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: true, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -2 }",
    "editor.bracketPairColorization.enabled": false,
    "workbench.startupEditor": "none",
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "files.autoSave": "afterDelay",
    "security.workspace.trust.untrustedFiles": "open",
    "python.analysis.extraPaths": [],
    "[cpp]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 4
    },
    "workbench.colorCustomizations": {},
    "editor.language.brackets": [],
    "json.schemas": [],
    "git.autofetch": true,
    "git.terminalAuthentication": false,
    "git.confirmSync": false,
    "code-runner.executorMap": {
        "cpp": "cd $dir && clang++ -std=c++17 -stdlib=libc++ $fileName -o $fileNameWithoutExt.out && $dir$fileNameWithoutExt.out && rm $dir$fileNameWithoutExt.out",
        "c": "cd $dir && gcc -std=c11 $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt && rm $dir$fileNameWithoutExt",
        // "cpp": "cd $dir && clang++ -std=c++17 -stdlib=libc++ $fileName -o $fileNameWithoutExt.exe && $dir$fileNameWithoutExt.exe",
        "python": "cd $dir && python3 -u $fileName",
    },
    "code-runner.languageIdToFileExtensionMap": {
        "bat": ".bat",
        "powershell": ".ps1",
        "typescript": ".ts",
    },
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "[c]": {
        "editor.tabSize": 4,
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "notebook.formatOnSave.enabled": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnType": true,
        // "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "[css]": {
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.tabSize": 4
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "workbench.iconTheme": "material-icon-theme",
    "liveServer.settings.donotVerifyTags": true,
    "notebook.lineNumbers": "on",
    // latex
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "xe*2",
            "tools": [
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk"
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "terminal.external.osxExec": "iTerm2.app",
    // "terminal.external.osxExec": "iTerm.app",
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "workbench.colorTheme": "Nord",
    "code-runner.runInTerminal": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "window.commandCenter": false,
    "window.zoomLevel": 1,
    "aws.telemetry": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "application.shellEnvironmentResolutionTimeout": 15,
    "cmake.showOptionsMovedNotification": false,
}