{
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: true, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -2 }",
    // Editor
    "editor.bracketPairColorization.enabled": false,
    "editor.fontSize": 14,
    "editor.language.brackets": [],
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "files.autoSave": "afterDelay",
    "security.workspace.trust.untrustedFiles": "open",
    "python.analysis.extraPaths": [],
    "[cpp]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 4
    },
    "json.schemas": [],
    // Git
    "git.autofetch": true,
    "git.terminalAuthentication": false,
    "git.confirmSync": false,
    "git.path": "/usr/bin/git",
    // Code Runner
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && clang++ -std=c++17 -stdlib=libc++ $fileName -o $fileNameWithoutExt.out && $dir$fileNameWithoutExt.out && rm $dir$fileNameWithoutExt.out",
        "c": "cd $dir && gcc -std=c11 $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt && rm $dir$fileNameWithoutExt",
        // "cpp": "cd $dir && clang++ -std=c++17 -stdlib=libc++ $fileName -o $fileNameWithoutExt.exe && $dir$fileNameWithoutExt.exe",
        "python": "cd $dir && python3 -u $fileName",
    },
    "code-runner.languageIdToFileExtensionMap": {
        "bat": ".bat",
        "powershell": ".ps1",
        "typescript": ".ts",
    },
    // Live Server
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "[c]": {
        "editor.tabSize": 4,
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "notebook.formatOnSave.enabled": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnType": true,
        // "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "[css]": {
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.tabSize": 4
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "notebook.lineNumbers": "on",
    // latex
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipe.default": "latexmk (lualatex)",
    // Terminal
    "terminal.external.osxExec": "iTerm2",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontSize": 14,
    // Jupyter
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    // "diffEditor.hideUnchangedRegions.enabled": true,
    // workbench
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "GitHub Dark",
    "workbench.colorCustomizations": {},
    "workbench.iconTheme": "material-icon-theme",
    // GitHub Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "log": true
    },
    // Window
    "window.commandCenter": false,
    "window.zoomLevel": 1,
    "aws.telemetry": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "application.shellEnvironmentResolutionTimeout": 15,
    // Dart
    "dart.flutterSdkPath": "/Users/hugolin/flutter",
    // CMake
    "cmake.configureOnOpen": true,
    "cmake.showOptionsMovedNotification": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "go.toolsManagement.autoUpdate": true,
    // Word Wrap
    "[mdx]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 100
    },
    "[latex]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 100
    },
    // Markdown Preview Github Styles
    "markdown-preview-github-styles.colorTheme": "dark"
}